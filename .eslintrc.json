{
  "plugins": ["@typescript-eslint"],
  "extends": [
    "next/core-web-vitals",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "React": "readonly",
    "context": "true",
    "expect": "true",
    "jsdom": "true",
    "JSX": "true"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-empty-interface": "warn",
    "@typescript-eslint/no-explicit-any": ["off"]
  }
}
